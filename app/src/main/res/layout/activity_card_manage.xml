<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.CardManageActivity"
    android:padding="20dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >
        <EditText
            android:id="@+id/pin1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:maxLength="4"
            android:background="@drawable/box_entire_line"
            android:padding="6dp"
            />
        <EditText
            android:id="@+id/pin2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:maxLength="4"
            android:background="@drawable/box_entire_line"
            android:padding="6dp"
            />

        <EditText
            android:id="@+id/pin3"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:maxLength="4"
            android:background="@drawable/box_entire_line"
            android:padding="6dp"
            />

        <EditText
            android:id="@+id/pin4"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:maxLength="4"
            android:background="@drawable/box_entire_line"
            android:padding="6dp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="뒤로"
            />
        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="등록"
            />

    </LinearLayout>
</LinearLayout>